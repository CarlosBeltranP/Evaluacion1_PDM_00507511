                />
        </LinearLayout>







    </LinearLayout>
    <Button
        android:id="@+id/bt_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="share"
        android:textSize="18sp"
       />

</LinearLayout>