                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="#fff"
                android:textSize="30sp"
                android:gravity="center"
                />
        </LinearLayout>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/bt_7"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="#438dff"
            android:orientation="vertical"
            android:layout_margin="@dimen/small_gap">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cargador"
                android:textSize="15sp"
                android:textColor="#fff"
                android:gravity="center"
                android:layout_margin="@dimen/small_gap"/>
            <TextView
                android:id="@+id/tv_7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:text="0"
                android:textSize="30sp"
                android:gravity="center"
                />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/bt_8"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="#019bb0"
            android:orientation="vertical"
            android:layout_margin="@dimen/small_gap">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mouse"
                android:textSize="15sp"
                android:textColor="#fff"
                android:gravity="center"
                android:layout_margin="@dimen/small_gap"/>
            <TextView
                android:id="@+id/tv_8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="#fff"
                android:textSize="30sp"
                android:gravity="center"
                />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/bt_9"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="#04926b"
            android:orientation="vertical"
            android:layout_margin="@dimen/small_gap">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Monitor"
                android:textSize="15sp"
                android:textColor="#fff"
                android:gravity="center"
                android:layout_margin="@dimen/small_gap"/>
            <TextView
                android:id="@+id/tv_9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:text="0"
                android:textSize="30sp"
