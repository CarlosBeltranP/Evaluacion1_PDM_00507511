<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:text="FACTURA"
        android:textColor="#333"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_margin="@dimen/medium_gap"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="@dimen/small_gap">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Usuario:"
            android:textSize="18sp"
            android:textColor="#333"/>

        <TextView
            android:id="@+id/tv_usuario"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="#333"/>




    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="@dimen/small_gap">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Correo:"
            android:textSize="18sp"
            android:textColor="#333"/>

        <TextView
            android:id="@+id/tv_email"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="#333"/>




    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="@dimen/small_gap">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Total de productos:"
            android:textSize="18sp"
            android:textColor="#333"/>

        <TextView
            android:id="@+id/tv_total1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="#333"/>




    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Detalle de productos"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#333"
        android:layout_gravity="center"
        android:layout_margin="@dimen/medium_gap"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <LinearLayout
            android:id="@+id/bt_1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="#d42a05"
            android:orientation="vertical"
            android:layout_margin="@dimen/small_gap">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cámara"
                android:textSize="15sp"
                android:textColor="#fff"
                android:gravity="center"
                android:layout_margin="@dimen/small_gap"/>
            <TextView
                android:id="@+id/tv_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:textSize="30sp"
                android:text="0"
                android:gravity="center"
                />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/bt_2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="#a402b2"
            android:orientation="vertical"
            android:layout_margin="@dimen/small_gap">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Celular"
                android:textSize="15sp"
                android:textColor="#fff"
                android:gravity="center"
                android:layout_margin="@dimen/small_gap"/>
            <TextView
                android:id="@+id/tv_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="#fff"
                android:textSize="30sp"
                android:gravity="center"
                />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/bt_3"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="#3c068f"
            android:orientation="vertical"
            android:layout_margin="@dimen/small_gap">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Batería"
                android:textSize="15sp"
                android:textColor="#fff"
                android:gravity="center"
                android:layout_margin="@dimen/small_gap"/>
            <TextView
                android:id="@+id/tv_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="#fff"
                android:textSize="30sp"
                android:gravity="center"
                />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/bt_4"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="#4a02b2"
            android:orientation="vertical"
            android:layout_margin="@dimen/small_gap">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tablet"
                android:textSize="15sp"
                android:textColor="#fff"
                android:gravity="center"
                android:layout_margin="@dimen/small_gap"/>
            <TextView
                android:id="@+id/tv_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="#fff"
                android:textSize="30sp"
                android:gravity="center"
                />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/bt_5"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="#01039f"
            android:orientation="vertical"
            android:layout_margin="@dimen/small_gap">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Teclado"
                android:textSize="15sp"
                android:textColor="#fff"
                android:gravity="center"
                android:layout_margin="@dimen/small_gap"/>
            <TextView
                android:id="@+id/tv_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="#fff"
                android:textSize="30sp"
                android:gravity="center"
                />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/bt_6"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="#4346ff"
            android:orientation="vertical"
            android:layout_margin="@dimen/small_gap">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Laptop"
                android:textSize="15sp"
